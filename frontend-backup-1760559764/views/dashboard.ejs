<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8">
  <!-- Top Navigation Bar -->
  <div class="flex justify-between items-center mb-8 pb-4 border-b border-gray-700">
    <h2 class="text-2xl font-bold">Dashboard</h2>
    <div class="flex items-center gap-4">
      <img id="user-avatar" src="" alt="Avatar" class="w-10 h-10 rounded-full hidden">
      <span id="user-name" class="text-gray-300"></span>
      <button id="logout-btn" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded text-sm">
        Logout
      </button>
    </div>
  </div>

  <!-- Dashboard Content -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Connected Repositories Card -->
    <div class="bg-gray-800 p-6 rounded-lg">
      <h3 class="text-lg font-semibold mb-2">Connected Repositories</h3>
      <p class="text-4xl font-bold text-blue-400">0</p>
      <p class="text-gray-400 text-sm mt-2">No repositories connected yet</p>
    </div>

    <!-- Analyses Run Card -->
    <div class="bg-gray-800 p-6 rounded-lg">
      <h3 class="text-lg font-semibold mb-2">Analyses Run</h3>
      <p class="text-4xl font-bold text-green-400">0</p>
      <p class="text-gray-400 text-sm mt-2">Total PR reviews completed</p>
    </div>

    <!-- Issues Found Card -->
    <div class="bg-gray-800 p-6 rounded-lg">
      <h3 class="text-lg font-semibold mb-2">Issues Found</h3>
      <p class="text-4xl font-bold text-yellow-400">0</p>
      <p class="text-gray-400 text-sm mt-2">Security & quality issues</p>
    </div>
  </div>

  <!-- Connect Repository Section -->
  <div class="bg-gray-800 p-8 rounded-lg">
    <div class="flex justify-between items-center mb-6">
      <h3 class="text-2xl font-bold">Connect Repository</h3>
      <button id="refresh-repos-btn" class="bg-gray-700 hover:bg-gray-600 px-4 py-2 rounded text-sm">
        â†» Refresh
      </button>
    </div>
    <p class="text-gray-300 mb-6">Select a Python repository from your GitHub account to enable AI code reviews</p>

    <!-- Loading State -->
    <div id="repos-loading" class="text-center py-8">
      <div class="inline-block animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-500"></div>
      <p class="text-gray-400 mt-4">Loading your repositories...</p>
    </div>

    <!-- Repository List -->
    <div id="repos-list" class="hidden space-y-4">
      <!-- Repositories will be dynamically inserted here -->
    </div>

    <!-- Empty State -->
    <div id="repos-empty" class="hidden text-center py-8">
      <svg class="mx-auto h-16 w-16 text-gray-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
      </svg>
      <p class="text-gray-400 text-lg">No Python repositories found</p>
      <p class="text-gray-500 text-sm mt-2">Make sure you have Python repositories in your GitHub account</p>
    </div>
  </div>
</div>

<script src="/js/dashboard.js"></script>

<%- include('partials/footer') %>